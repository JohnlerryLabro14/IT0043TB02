    <script>
        document.getElementById("pokemonForm").addEventListener("submit", function (event) {
            event.preventDefault();
            var form = event.target;
            var table = document.getElementById("pokemonTable");
            var newRow = table.insertRow(-1);
            var nationalDex = newRow.insertCell(0);
            var name = newRow.insertCell(1);
            var type = newRow.insertCell(2);
            var image = newRow.insertCell(3);
            var generation = newRow.insertCell(4);
            var prevEvo = newRow.insertCell(5);
            var currEvo = newRow.insertCell(6);
            var nextEvo = newRow.insertCell(7);
            var nickname = newRow.insertCell(8);

            nationalDex.innerHTML = form.elements["nationalDex"].value;
            name.innerHTML = "Pokemon";
            type.innerHTML = form.elements["type"].value;
            image.innerHTML = '<img src="https://via.placeholder.com/150" alt="Pokemon">';
            generation.innerHTML = form.elements["generation"].value;
            prevEvo.innerHTML = "Prev Evolution";
            currEvo.innerHTML = form.elements["evolution"].value;
            nextEvo.innerHTML = "Next Evolution";
            nickname.innerHTML = form.elements["nickname"].value || "N/A";
        });

    </script>
</body>

